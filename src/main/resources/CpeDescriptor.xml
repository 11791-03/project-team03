    <collectionReader>
        <collectionIterator>
            <descriptor>
                <import location="descriptors/collection_reader/QuestionReader.xml"/>
            </descriptor>
        </collectionIterator>
    </collectionReader>
    <casProcessors casPoolSize="3" processingUnitThreadCount="1">
        <casProcessor deployment="integrated" name="aeQuestionPreprocessingDescriptor">
            <descriptor>
                <import location="descriptors/annotators/aeQuestionPreprocessingDescriptor.xml"/>
            </descriptor>
            <deploymentParameters/>
